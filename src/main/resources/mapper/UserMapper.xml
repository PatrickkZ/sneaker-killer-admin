<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.patrick.sneakerkilleradmin.mapper.UserMapper">
    <resultMap id="userMap" type="User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="salt" property="salt"/>

        <collection property="roles" ofType="Role" column="id" select="com.patrick.sneakerkilleradmin.mapper.RoleMapper.getByUserId">
        </collection>
    </resultMap>
    <select id="getByUsername" parameterType="String" resultType="User">
        select * from admin_user where username=#{value}
    </select>

    <select id="getUserWithRole" parameterType="String" resultMap="userMap">
        select * from admin_user where username=#{value}
    </select>

    <select id="getAllUserWithRole" resultMap="userMap">
        select id,username from admin_user
    </select>

    <insert id="save" parameterType="User" keyProperty="id" useGeneratedKeys="true">
        insert into admin_user(username,password,salt)
        values (#{username},#{password},#{salt})
    </insert>

    <insert id="insertCurUserRole">
        insert into admin_user_role(uid,rid)
        values (#{userId},#{roleId})
    </insert>

    <update id="updatePassword" parameterType="User">
        update admin_user
        set password=#{password},salt=#{salt}
        where username=#{username}
    </update>

    <delete id="deleteCurUserRole" parameterType="Integer">
        delete from admin_user_role where uid=#{value}
    </delete>
</mapper>